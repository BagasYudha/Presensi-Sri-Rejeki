<?xml version="1.0" encoding="utf-8"?>
<!-- Layout untuk halaman Create New Account -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- Judul Halaman -->
    <TextView
        android:id="@+id/tvCreateAccountTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Buat Akun Baru"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#0C8CE9"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="88dp" />

    <!-- Input Username -->
    <EditText
        android:id="@+id/etNewUsername"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:padding="12dp"
        android:background="@drawable/edit_text_bg"
        app:layout_constraintTop_toBottomOf="@id/tvCreateAccountTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- Input Fullname -->
    <EditText
        android:id="@+id/etFullName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Full Name"
        android:padding="12dp"
        android:background="@drawable/edit_text_bg"
        app:layout_constraintTop_toBottomOf="@id/etNewUsername"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Input Email -->
    <EditText
        android:id="@+id/etEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="12dp"
        android:background="@drawable/edit_text_bg"
        app:layout_constraintTop_toBottomOf="@id/etFullName"
        app:layout_constraintStart_toStartOf="@id/etNewUsername"
        app:layout_constraintEnd_toEndOf="@id/etNewUsername"
        android:layout_marginTop="16dp" />

    <!-- Input Password -->
    <EditText
        android:id="@+id/etNewPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="12dp"
        android:background="@drawable/edit_text_bg"
        app:layout_constraintTop_toBottomOf="@id/etEmail"
        app:layout_constraintStart_toStartOf="@id/etEmail"
        app:layout_constraintEnd_toEndOf="@id/etEmail"
        android:layout_marginTop="16dp" />

    <!-- Konfirmasi Password -->
    <EditText
        android:id="@+id/etConfirmPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Konfirmasi Password"
        android:inputType="textPassword"
        android:padding="12dp"
        android:background="@drawable/edit_text_bg"
        app:layout_constraintTop_toBottomOf="@id/etNewPassword"
        app:layout_constraintStart_toStartOf="@id/etNewPassword"
        app:layout_constraintEnd_toEndOf="@id/etNewPassword"
        android:layout_marginTop="16dp" />

    <!-- Tombol Buat Akun -->
    <Button
        android:id="@+id/btnCreateAccount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Buat Akun"
        android:textColor="#FFFFFF"
        android:backgroundTint="#0C8CE9"
        android:padding="12dp"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/etConfirmPassword"
        app:layout_constraintStart_toStartOf="@id/etConfirmPassword"
        app:layout_constraintEnd_toEndOf="@id/etConfirmPassword"
        android:layout_marginTop="24dp" />

    <!-- Trigger kembali ke halaman Login -->
    <TextView
        android:id="@+id/tvLoginInstead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sudah Mempunyai Akun? Login"
        android:textColor="#0C8CE9"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/btnCreateAccount"
        app:layout_constraintStart_toStartOf="@id/btnCreateAccount"
        app:layout_constraintEnd_toEndOf="@id/btnCreateAccount"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
