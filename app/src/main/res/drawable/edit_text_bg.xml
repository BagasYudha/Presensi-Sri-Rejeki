<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Warna latar belakang putih -->
    <solid android:color="#FFFFFF" />

    <!-- Border dengan warna biru aksen #0C8CE9 -->
    <stroke
        android:width="1dp"
        android:color="#0C8CE9" />

    <!-- Sudut membulat -->
    <corners android:radius="8dp" />

    <!-- Padding internal (opsional) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
